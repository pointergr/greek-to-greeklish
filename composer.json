{
    "name": "pointergr/greek-to-greeklish",
    "description": "A PHP library for converting Greek text to Greeklish (Greek words written with Latin characters)",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Thomas Papamichail",
            "email": "thomas@pointer.gr"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.2.5",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Pointergr\\GreekToGreeklish\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pointergr\\GreekToGreeklish\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit tests"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "platform-check": true,
        "platform": {
            "php": "7.2.5"
        }
    }
}